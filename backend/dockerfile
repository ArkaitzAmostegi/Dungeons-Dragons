# Etapa 1: Composer
FROM composer:2 AS composer

# Etapa 2: PHP + Apache
FROM php:8.3-apache

# Instalar dependencias PHP y herramientas
RUN apt-get update && apt-get install -y \
    git unzip curl \
    libzip-dev libpng-dev libonig-dev libxml2-dev \
    libicu-dev libcurl4-openssl-dev \
    && docker-php-ext-install pdo pdo_mysql zip mbstring xml intl curl

# Node.js 20
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
 && apt-get install -y nodejs

# Habilitar mod_rewrite
RUN a2enmod rewrite

# Copiar Composer desde la primera etapa
COPY --from=composer /usr/bin/composer /usr/bin/composer

# Configuraci√≥n Apache
COPY docker/apache.conf /etc/apache2/sites-available/000-default.conf

WORKDIR /var/www/html

# Copiar composer.json y lock para instalar dependencias
COPY composer.json composer.lock ./
RUN composer install --no-interaction --prefer-dist --optimize-autoloader --no-scripts

# Copiar package.json y lock para instalar dependencias npm
COPY package.json package-lock.json ./
RUN npm config set bin-links true \
 && npm config set fund false \
 && npm config set audit false \
 && npm ci

# Copiar todo el proyecto
COPY . .

# Crear carpetas necesarias y dar permisos
RUN mkdir -p bootstrap/cache storage \
 && chown -R www-data:www-data bootstrap/cache storage \
 && chmod -R 775 bootstrap/cache storage

# Autoload y discovery de Laravel
RUN composer dump-autoload --optimize
RUN php artisan package:discover --ansi

# Build assets con Vite
RUN npx vite build

# Asegurar permisos finales
RUN chown -R www-data:www-data /var/www/html
